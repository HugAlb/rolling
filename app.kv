GridLayout:
    cols: 1
    padding: [50, 50, 50, 50]  # Espaçamento para garantir que o conteúdo não fique grudado na borda
    spacing: 20  # Espaçamento entre os elementos dentro do GridLayout

    # Dado de 4 faces
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 50
        Label:
            id: d4
            text: "Dado de 4 faces"
            size_hint_x: None
            width: 200
            halign: "center"
        Button:
            text: 'Rolar'
            size_hint: None, None
            width: 200
            height: 50
            on_press: app.d4()

